<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <!-- ✅ TextView di pojok kiri atas -->
    <TextView
        android:id="@+id/tvHalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo Nazwa,"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- ✅ Deskripsi di bawah Halo Nazwa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHalo"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orderan kamu sudah saya terima\ndan sedang saya proses untuk diantar\nke alamat yang kamu berikan\npesanan-anda"
            android:textAlignment="textStart"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ✅ Tombol bawah -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:text="Selesai"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#000000"
        app:cornerRadius="20dp" />

</RelativeLayout>
